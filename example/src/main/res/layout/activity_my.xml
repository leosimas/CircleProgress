<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        >

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donutProgress"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            custom:donut_progress="10"
            custom:donut_text_size="14sp"
            custom:donut_text_bold="true"
            custom:donut_circle_starting_degree="270"
            custom:donut_finished_stroke_width="4dp"
            custom:donut_unfinished_stroke_width="4dp"
            />

        <com.github.lzyzsd.circleprogress.CircleProgress
            android:id="@+id/circle_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:circle_finished_color="#0066FF"
            custom:circle_progress="70"
            custom:circle_unfinished_color="@color/primary_material_light"
            android:layout_marginTop="25dp"
            />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:donut_finished_color="#0066FF"
            custom:donut_finished_stroke_width="15dp"
            android:backgroundTint="#0066FF"
            android:backgroundTintMode="add"
            custom:donut_unfinished_color="@color/primary_material_light"
            custom:donut_unfinished_stroke_width="15dp" />


        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:arc_progress="50"
            custom:arc_unfinished_color="#0066FF" />

    </LinearLayout>

</ScrollView>
